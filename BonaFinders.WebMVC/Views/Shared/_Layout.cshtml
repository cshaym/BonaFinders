<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Bona Finders</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header bold-main-font">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BF", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fas fa-globe-americas" })
            </div>
            <div class="navbar-collapse collapse bold-main-font">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ethical Organizations", "Index", "Ethical")</li>
                    <li>@Html.ActionLink("Unethical Organizations", "Index", "Unethical")</li>
                    <li>@Html.ActionLink("Tips", "Index", "Tip")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

        <div class="footer-div-style bold-main-font">
            <footer>
                <ul class="list-inline">
                    <li class="list-inline-item">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="list-inline-item">@Html.ActionLink("About", "About", "Home")</li>
                    @*<li class="list-inline-item">@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                <p class="copyright">Bona Finders MVC &copy; @DateTime.Now.Year | Shay</p>
            </footer>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
