@model IEnumerable<BonaFinders.Models.EthicalReviewModels.ERListItem>

@{
    ViewBag.Title = "Index";
}

@{<img class="imageBG" src="~/Content/assets/greenblur.PNG">}

<div class="body-content table-responsive">
    <h2 class="heading-font">List of Ethical Organization Reviews</h2>

    @if (User.Identity.IsAuthenticated) { 
    <p class="bold-main-font shadow-text">@Html.ActionLink("Add a Review", "Create")</p>}

    @if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert alert-success fade in" role="alert">
            @ViewBag.SaveResult
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }

    <table class="table table-striped table-hover bold-main-font">
        <tr class="top-border">
            <th>
                @Html.DisplayNameFor(model => model.OrganizationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EthicalReviewTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EthicalReviewText)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrganizationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EthicalReviewTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EthicalReviewText)
                </td>
                @*<td>
                        @Html.ActionLink("Change", "Edit", new { id = item.EthicalReviewId }) |
                        @Html.ActionLink("More Info", "Details", new { id = item.EthicalReviewId }) |
                        @Html.ActionLink("Remove", "Delete", new { id = item.EthicalReviewId })
                    </td>*@
            </tr>
        }
    </table>

</div>