@model IEnumerable<BonaFinders.Models.TipModels.TListItem>

@{ViewBag.Title = "Index";}
@{<img class="imageBG" src="~/Content/assets/greenblur.PNG">}

<h2 class="heading-font">Tips</h2>
<h4 class="bold-main-font">(On how to research a brand, How to shop ethically, How to reuse and recycle, etc.)</h4>

@if (User.Identity.IsAuthenticated) { 
<p class="bold-main-font shadow-text">@Html.ActionLink("Add a Tip", "Create")</p>}

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table table-striped table-hover bold-main-font">
    <tr class="top-border">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>

            @if (User.Identity.IsAuthenticated) { 
            <td>
                @Html.ActionLink("Change", "Edit", new { id = item.TipId }) |   
                @Html.ActionLink("More Info", "Details", new { id = item.TipId }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.TipId })
            </td>}
        </tr>
    }

</table>
