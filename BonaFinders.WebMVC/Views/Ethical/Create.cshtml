@model BonaFinders.Models.EthicalModels.ECreate

    @{ViewBag.Title = "Create";}
    @{<img class="imageBG" src="~/Content/assets/greenblur.PNG">}

<div class="body-content form-style">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 class="heading-font">Create an Ethical Organization</h2>

            <div class="form-content">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group bold-main-font">
                    @Html.LabelFor(model => model.EthicalOrganizationName, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.EthicalOrganizationName, new { htmlAttributes = new { @class = "form-control col-form-label" } })
                        @Html.ValidationMessageFor(model => model.EthicalOrganizationName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group bold-main-font">
                    @Html.LabelFor(model => model.CrueltyFree, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        <div class="checkbox check">
                            @Html.EditorFor(model => model.CrueltyFree)
                            @Html.ValidationMessageFor(model => model.CrueltyFree, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group bold-main-font">
                    @Html.LabelFor(model => model.Sustainable, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        <div class="checkbox check">
                            @Html.EditorFor(model => model.Sustainable)
                            @Html.ValidationMessageFor(model => model.Sustainable, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group bold-main-font">
                    @Html.LabelFor(model => model.Diverse, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        <div class="checkbox check">
                            @Html.EditorFor(model => model.Diverse)
                            @Html.ValidationMessageFor(model => model.Diverse, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group bold-main-font">
                    @Html.LabelFor(model => model.ECountry, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.ECountry, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ECountry, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group bold-main-font">
                    @Html.LabelFor(model => model.EImprove, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.EImprove, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EImprove, "", new { @class = "text-danger" })
                    </div>
                </div>

                @if (User.Identity.IsAuthenticated) { 
                <div class="form-group bold-main-font">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>}
            </div>

        </div>
    }

    <div class="bold-main-font shadow-text">
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>