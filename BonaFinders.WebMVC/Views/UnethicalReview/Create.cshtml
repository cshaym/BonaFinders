@model BonaFinders.Models.UnethicalReviewModels.URCreate

@{
    ViewBag.Title = "Create";
}
@{
    <img class="imageBG" src="~/Content/assets/greenblur.PNG">
}

<div class="body-content form-style">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 class="heading-font">Write a Review for an Unethical Organization</h2>

            <div class="form-content">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group bold-main-font">
                    <!-- Change display name for UnethicalOrganizationId to Organization on model and class -->
                    @Html.LabelFor(model => model.UnethicalOrganizationId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10 col-form-label">
                        @Html.DropDownListFor(model => model.UnethicalOrganizationId, new SelectList(ViewBag.Organizations, "UnethicalOrganizationId", "UnethicalOrganizationName"))
                        @Html.ValidationMessageFor(model => model.UnethicalOrganizationId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group bold-main-font">
                    @Html.LabelFor(model => model.UnethicalReviewTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UnethicalReviewTitle, new { htmlAttributes = new { @class = "form-control col-form-label" } })
                        @Html.ValidationMessageFor(model => model.UnethicalReviewTitle, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group bold-main-font">
                    @Html.LabelFor(model => model.UnethicalReviewText, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UnethicalReviewText, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UnethicalReviewText, "", new { @class = "text-danger" })
                    </div>
                </div>

                @if (User.Identity.IsAuthenticated) { 
                <div class="form-group bold-main-font">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>}
            </div>
        </div>
    }

    <div class="bold-main-font shadow-text">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>