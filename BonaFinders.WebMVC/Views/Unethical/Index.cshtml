@model IEnumerable<BonaFinders.Models.UnethicalModels.UListItem>

@{
    ViewBag.Title = "Index";
}

@{<img class="imageBG" src="~/Content/assets/greenblur.PNG">}

<div class="body-content table-responsive">
    <h2 class="heading-font">List of Unethical Organizations</h2>
    <h4 class="bold-main-font">(Companies, Businesses, Brands, Corporations, etc.)</h4>

    @if (User.Identity.IsAuthenticated) { 
    <p class="bold-main-font shadow-text">@Html.ActionLink("Add an Unethical Organization", "Create")</p>
    <p class="bold-main-font shadow-text">OR</p>}
    <p class="bold-main-font shadow-text">@Html.ActionLink("View Reviews", "Index", "UnethicalReview")</p>

    @if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert alert-success fade in" role="alert">
            @ViewBag.SaveResult
            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }

    <table class="table table-striped table-hover bold-main-font">

        <tr class="top-border">
            <!-- tr style="background-color: darkgrey" or some other color -->
            <th>
                @Html.DisplayNameFor(model => model.UnethicalOrganizationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FastFashion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exploitation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sweatshop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Copyright)
            </th>
            <th>
                <!--  class="visible-lg visible-md" -->
                @Html.DisplayNameFor(model => model.UCountry)
            </th>
            <th>
                <!--  class="visible-lg visible-md" -->
                @Html.DisplayNameFor(model => model.UImprove)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UnethicalOrganizationName)
                </td>
                <td class="danger">
                    @Html.DisplayFor(modelItem => item.FastFashion)
                </td>
                <td class="danger">
                    @Html.DisplayFor(model => item.Exploitation)
                </td>
                <td class="danger">
                    @Html.DisplayFor(modelItem => item.Sweatshop)
                </td>
                <td class="danger">
                    @Html.DisplayFor(modelItem => item.Copyright)
                </td>
                <td>
                    <!--  class="visible-lg visible-md" -->
                    @Html.DisplayFor(modelItem => item.UCountry)
                </td>
                <td class="warning">
                    <!--  class="visible-lg visible-md" -->
                    @Html.DisplayFor(modelItem => item.UImprove)
                </td>

                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        @Html.ActionLink("Change", "Edit", new { id = item.UnethicalOrganizationId }) |
                        @Html.ActionLink("More Info", "Details", new { id = item.UnethicalOrganizationId }) |
                        @Html.ActionLink("Remove", "Delete", new { id = item.UnethicalOrganizationId })
                    </td>
                }

            </tr>
        }
    </table>
</div>